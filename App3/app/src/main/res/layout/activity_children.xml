<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/bleu"
    tools:context=".ChildrenActivity">

    <ImageView
        android:id="@+id/iv_children_logo"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSCRIPTION : "
        android:textSize="20dp"
        android:layout_marginBottom="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login : "/>
    <EditText
        android:id="@+id/et_children_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password : "/>
    <EditText
        android:id="@+id/et_children_pwd"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <!-- espace entre les composants -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email : "/>
    <EditText
        android:id="@+id/et_children_email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/bt_children_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider le formulaire"
        android:onClick="onChildrenClickManager"
        />
</LinearLayout>